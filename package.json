{
  "name": "@nezuchan/nezu-gateway",
  "version": "1.0.0",
  "description": "A standalone service for connecting to the Discord gateway.",
  "main": "dist",
  "scripts": {
    "start": "npm run build && node --experimental-specifier-resolution=node -r dotenv/config dist/index.js",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --fix --ext ts",
    "build": "rimraf dist && swc src -d dist"
  },
  "type": "module",
  "author": "KagChi",
  "license": "GPL-3.0",
  "devDependencies": {
    "@hazmi35/eslint-config": "^8.7.1",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.22",
    "@types/gradient-string": "^1.1.2",
    "@types/node": "^18.11.15",
    "@typescript-eslint/eslint-plugin": "^5.46.1",
    "@typescript-eslint/parser": "^5.46.1",
    "@vladfrangu/async_event_emitter": "^2.1.2",
    "eslint": "^8.29.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "@hazmi35/eslint-config/typescript"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off"
    }
  },
  "dependencies": {
    "@discordjs/rest": "^1.4.0",
    "@discordjs/ws": "^0.5.0",
    "@nezuchan/cordis-brokers": "^1.5.8",
    "@nezuchan/redis-collection": "^1.2.2",
    "@sapphire/pieces": "^3.6.0",
    "@sapphire/result": "^2.6.0",
    "@sapphire/time-utilities": "^1.7.8",
    "@sapphire/utilities": "^3.11.0",
    "@skyra/start-banner": "^1.0.2",
    "discord-api-types": "^0.37.22",
    "dotenv": "^16.0.3",
    "gradient-string": "^2.0.2",
    "ioredis": "^5.2.4",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1"
  }
}
