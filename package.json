{
  "name": "@nezuchan/nezu-gateway",
  "version": "2.0.0",
  "description": "A standalone service for connecting to the Discord gateway.",
  "license": "GPL-3.0",
  "author": "KagChi",
  "type": "module",
  "main": "dist",
  "scripts": {
    "build": "rimraf dist && swc src -d dist",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --fix --ext ts",
    "start": "npm run build && node -r dotenv/config dist/index.js"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "@hazmi35/eslint-config/typescript"
    ],
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "off",
      "class-methods-use-this": "off",
      "@typescript-eslint/restrict-template-expressions": "off",
      "@typescript-eslint/naming-convention": "off"
    }
  },
  "dependencies": {
    "@discordjs/rest": "^1.7.0",
    "@discordjs/ws": "^0.8.0",
    "@nezuchan/constants": "^0.5.4",
    "@nezuchan/utilities": "^0.3.1",
    "@sapphire/pieces": "^3.6.2",
    "@sapphire/result": "^2.6.2",
    "@sapphire/utilities": "^3.11.1",
    "@skyra/start-banner": "^2.0.0",
    "bufferutil": "^4.0.7",
    "dotenv": "^16.0.3",
    "gradient-string": "^2.0.2",
    "ioredis": "^5.3.2",
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "utf-8-validate": "^6.0.3",
    "zlib-sync": "^0.1.8"
  },
  "devDependencies": {
    "@hazmi35/eslint-config": "^9.0.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.51",
    "@types/amqplib": "^0.10.1",
    "@types/gradient-string": "^1.1.2",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "@vladfrangu/async_event_emitter": "^2.2.1",
    "discord-api-types": "^0.37.38",
    "eslint": "^8.38.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.4"
  }
}
